<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background image -->
    <item>
        <bitmap
            android:src="@drawable/logo"
            android:gravity="center"
            android:tileMode="disabled" />
    </item>

    <!-- Overlay shape with border and rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Make the solid color transparent -->
            <stroke
                android:width="2dp"
                android:color="@color/blue"/> <!-- Border color and width -->
            <corners android:radius="300dp"/> <!-- Border radius -->
        </shape>
    </item>
</layer-list>

